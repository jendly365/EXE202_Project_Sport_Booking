<style>
    /* Sidebar luôn hiển thị */
    .sidebar {
        width: 250px;
        height: 100vh;
        position: fixed;
        left: 0;
        top: 0;
        background: #343a40;
        color: white;
        box-shadow: 2px 0 5px rgba(0, 0, 0, 0.2);
        padding-top: 20px;
    }

    .sidebar-header {
        text-align: center;
        font-size: 1.5rem;
        padding-bottom: 15px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    }

    .sidebar-menu {
        list-style: none;
        padding: 0;
        margin-top: 10px;
    }

        .sidebar-menu li {
            padding: 15px;
            transition: background 0.3s;
        }

            .sidebar-menu li a {
                color: white;
                text-decoration: none;
                display: flex;
                align-items: center;
                font-size: 1.1rem;
            }

                .sidebar-menu li a i {
                    margin-right: 10px;
                }

            .sidebar-menu li:hover {
                background: rgba(255, 255, 255, 0.1);
            }

    /* Để nội dung chính không bị che */
    .content {
        margin-left: 260px;
        padding: 20px;
    }
</style>