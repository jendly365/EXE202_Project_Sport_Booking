        <ul class="sidebar-menu">
            <li><a href="@Url.Page("GetListCourt")"><i class="fas fa-futbol"></i> Quản lý Sân Thể Thao</a></li>
            <li><a href="@Url.Page("BookingList")"><i class="fas fa-calendar-check"></i> Quản lý Đặt Sân</a></li>
